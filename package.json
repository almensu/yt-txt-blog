{
  "name": "yt-txt-blog-generator",
  "version": "1.0.0",
  "description": "YouTube to pure text generator with yt-dlp integration",
  "main": "dist/backend/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "tsx watch src/backend/index.ts",
    "dev:frontend": "cd src/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd src/frontend && npm run build",
    "start": "node dist/backend/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "clean:all": "rimraf dist node_modules src/frontend/node_modules",
    "setup": "./scripts/setup.sh",
    "health-check": "./scripts/health-check.sh",
    "config:validate": "tsx -e \"import { configService } from './dist/backend/services/config.service.js'; configService.validateConfiguration().then(console.log).catch(console.error)\"",
    "storage:init": "tsx -e \"import { storageService } from './dist/backend/services/storage.service.js'; storageService.initializeStorage().then(() => console.log('Storage initialized')).catch(console.error)\""
  },
  "keywords": [
    "youtube",
    "subtitle",
    "transcription",
    "text-processing",
    "yt-dlp",
    "typescript"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "openai": "^4.20.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "@types/fs-extra": "^11.0.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "tsx": "^4.6.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}