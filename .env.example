# Application Environment
NODE_ENV=development

# Port Configuration
PORT=8000                    # Old system (YouTube processing) - src/backend/index.ts
NEW_SYSTEM_PORT=3000         # New system (TXT conversion) - src/server.ts

HOST=localhost

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API Configuration
API_BODY_LIMIT=10mb
API_REQUEST_TIMEOUT=30000
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Zhipu AI Configuration (OpenAI Compatible SDK)
ZHIPU_API_KEY=your_zhipu_api_key_here
# 标准端点 (按量付费)
ZHIPU_API_BASE=https://open.bigmodel.cn/api/paas/v4
# Coding端点 (GLM编码套餐专属) - 如果是包年API，设置为 true
ZHIPU_USE_CODING=true
# 模型选择：glm-4.7(最强)、glm-4.6、glm-4、glm-4-flash、glm-4v、glm-4-air
ZHIPU_MODEL=glm-4.7
# 最大 tokens：glm-4.7/glm-4.6 最大 131072
ZHIPU_MAX_TOKENS=131072
ZHIPU_TEMPERATURE=0.7

# yt-dlp Configuration
YT_DLP_PATH=yt-dlp
YT_DLP_TIMEOUT=300
YT_DLP_RETRY_COUNT=3
YT_DLP_OUTPUT_TEMPLATE=%(id)s/%(title)s.%(ext)s
YT_DLP_LANGUAGES=en,zh
YT_DLP_INCLUDE_AUTO=true

# Storage Configuration
STORAGE_BASE_PATH=./storage
STORAGE_DOWNLOADS_DIR=downloads
STORAGE_PROCESSED_DIR=processed
STORAGE_TEMP_DIR=temp
STORAGE_LOGS_DIR=logs
STORAGE_MAX_SIZE=1073741824
STORAGE_MAX_FILES=10000
STORAGE_AUTO_CLEANUP=true
STORAGE_CLEANUP_INTERVAL=24

# Processing Configuration
PYTHON_PATH=python3
CLEANING_SCRIPT_PATH=./scripts/clean_subtitle.py
PROCESSING_TIMEOUT=120
PROCESSING_MAX_FILE_SIZE=52428800
PROCESSING_REMOVE_TIMESTAMPS=true
PROCESSING_MERGE_DUPLICATES=true
PROCESSING_FORMAT_PARAGRAPHS=true
PROCESSING_MIN_SEGMENT_LENGTH=10

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=5
LOG_FORMAT=combined
LOG_TO_CONSOLE=true